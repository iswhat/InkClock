{
    "name": "inkclock/webserver",
    "description": "InkClock Web Server",
    "type": "project",
    "autoload": {
        "psr-4": {
            "InkClock\\": "src/"
        },
        "files": [
            "src/Utils/functions.php"
        ]
    },
    "require": {
        "php": ">=7.4",
        "ext-sqlite3": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests/",
        "lint": "vendor/bin/phpcs --standard=PSR12 src/",
        "lint:fix": "vendor/bin/phpcbf --standard=PSR12 src/"
    }
}