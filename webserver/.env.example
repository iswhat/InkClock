# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=inkclock
DB_CHARSET=utf8mb4

# SQLite Configuration (if using SQLite instead of MySQL)
SQLITE_PATH=./db/inkclock.db

# API Configuration
API_SECRET_KEY=your_secret_key_here
API_VERSION=v1
API_MAX_REQUESTS=100

# Device Configuration
DEVICE_MAX_MESSAGES=20
DEVICE_MESSAGE_EXPIRE=30

# Log Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRE=3600

# Middleware Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60
RATE_LIMIT_WINDOW=60
