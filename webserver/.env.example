# InkClock Web Server 环境变量配置示例

# 数据库配置
INKCLOCK_DB_HOST=localhost
INKCLOCK_DB_PORT=3306
INKCLOCK_DB_USER=root
INKCLOCK_DB_PASSWORD=
INKCLOCK_DB_DATABASE=inkclock
INKCLOCK_DB_CHARSET=utf8mb4

# API配置
INKCLOCK_API_SECRET_KEY=your_secret_key_here
INKCLOCK_API_VERSION=v1
INKCLOCK_API_MAX_REQUESTS_PER_MINUTE=100

# 设备配置
INKCLOCK_DEVICE_MAX_MESSAGES_PER_DEVICE=20
INKCLOCK_DEVICE_MESSAGE_EXPIRE_DAYS=30

# 日志配置
INKCLOCK_LOG_LEVEL=info
INKCLOCK_LOG_FILE_PATH=logs/app.log

# SQLite数据库路径（用于SQLite模式）
INKCLOCK_DATABASE_PATH=db/inkclock.db
